// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "agent": {
        "default_profile": "ask",
        "model_parameters": [],
        "default_model": {
            "provider": "anthropic",
            "model": "claude-sonnet-4-latest"
        }
    },
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "vim_mode": true,
    "ui_font_size": 13,
    "buffer_font_size": 12,
    "cursor_blink": false,
    "use_autoclose": false,
    "tab_size": 4,
    "theme": {
        "mode": "system",
        "light": "Gruvbox Light",
        "dark": "Gruvbox Dark"
    },
    "buffer_font_features": {
        "calt": false
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/.jj",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
        "**/venv",
        "**.venv"
    ],
    "terminal": {
        "detect_venv": {
            "on": {
                "directories": [".env", "env", ".venv", "venv"],
                "activate_script": "fish"
            }
        }
    },
    "languages": {
        "Python": {
            "language_servers": ["ruff"],
            "format_on_save": "on",
            "formatter": [
                {
                    "code_actions": {
                        "source.organizeImports.ruff": true,
                        "source.fixAll.ruff": true
                    }
                }
            ]
        },
        "HTML": {
            "format_on_save": "off"
        }
    },
    "git": {
        "inline_blame": {
            "enabled": false
        }
    }
}
